{
    "easycom": {
        "^u-(.*)": "uview-ui/components/u-$1/u-$1.vue"
    },
    "pages": [{
        "path": "pages/index/index",
        "style": {
            "navigationBarTitleText": "广场",
            "titleNview": false,
            "app-plus": {
                "backgroundColor": "#fff",
                "scrollIndicator": "none",
                "bounce": "none",
                "titleNView": {
                    "backgroundColor": "#fff",
                    "searchInput": {
                        "scrollIndicator": "none",
                        "align": "center",
                        "disabled": true,
                        "placeholder": "搜索一下",
                        "backgroundColor": "#f7f7f7",
                        "borderRadius": "12px"
                    },
                    "buttons": [{
                        "fontSrc": "/static/icon/icon.ttf",
                        "text": "\ue653",
                        "float": "right",
                        "fontSize": "30px",
                        "colorPressed": "#ff9900"


                    }]

                }
            },
            "mp-weixin": {}

        }
    }, {
        "path": "pages/chat/chat",
        "style": {
            "navigationBarTitleText": "消息",
            "enablePullDownRefresh": false
        }

    }, {
        "path": "pages/dynamic/dynamic",
        "style": {
            "navigationBarTitleText": "动态",
            "enablePullDownRefresh": false,
            "navigationStyle": "custom",
            "app-plus": {
                "titleNview": false

            }
        }

    }, {
        "path": "pages/mine/mine",
        "style": {
            "navigationBarTitleText": "我的",
            "enablePullDownRefresh": false
        }

    }, {
        "path": "pages/index/search/search",
        "style": {
            "navigationBarTitleText": "搜索详情",
            "app-plus": {
                "backgroundColor": "#fff",
                "scrollIndicator": "none",
                "bounce": "none",
                "titleNView": {
                    "backgroundColor": "#fff",
                    "autoBackButton": false,
                    "searchInput": {
                        "scrollIndicator": "none",
                        "align": "left",
                        "disabled": false,
                        "placeholder": "搜索一下",
                        "backgroundColor": "#f7f7f7",
                        "borderRadius": "12px"
                    },
                    "buttons": [{
                        "text": "取消",
                        "float": "right",
                        "fontSize": "20px",
                        "width": "40px",
                        "colorPressed": "#bbbbbb"
                    }]

                }
            },
            "mp-weixin": {}
        }

    }, {
        "path": "pages/index/issue/issue",
        "style": {
            "navigationBarTitleText": "",
            "navigationStyle": "custom",
            "app-plus": {}
        }

    }, {
        "path": "components/dynamic/dynamic-hotList/dynamic-hotList",
        "style": {
            "navigationBarTitleText": "",
            "enablePullDownRefresh": false
        }

    }, {
        "path": "components/dynamic/dynamic-topicList/dynamic-topicList",
        "style": {
            "navigationBarTitleText": "",
            "enablePullDownRefresh": false
        }

    }, {
        "path": "pages/topic-nav/topic-nav",
        "style": {
            "navigationBarTitleText": "话题分类",
            "enablePullDownRefresh": false
        }

    }],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "张氏百科",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "tabBar": {
        "color": "#CDCDCD",
        "selectedColor": "#FFDF34",
        "list": [{
            "pagePath": "pages/index/index",
            "text": "广场",
            "iconPath": "./static/tabBar/index.png",
            "selectedIconPath": "static/tabBar/index_active.png"
        }, {
            "pagePath": "pages/dynamic/dynamic",
            "text": "动态",
            "iconPath": "static/tabBar/dynamic.png",
            "selectedIconPath": "static/tabBar/dynamic_active.png"
        }, {
            "pagePath": "pages/chat/chat",
            "text": "消息",
            "iconPath": "static/tabBar/chat.png",
            "selectedIconPath": "static/tabBar/chat_active.png"
        }, {
            "pagePath": "pages/mine/mine",
            "text": "我的",
            "iconPath": "static/tabBar/mine.png",
            "selectedIconPath": "static/tabBar/mine_active.png"
        }]
    }


}
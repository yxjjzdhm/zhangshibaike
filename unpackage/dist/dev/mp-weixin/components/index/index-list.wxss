.item {
  border-bottom: 2rpx solid #ccc;
  padding: 0 22rpx 40rpx;
}
.item .header {
  margin-top: 40rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.item .header .header-left .portrait {
  width: 74rpx;
  height: 74rpx;
  border-radius: 37rpx;
  vertical-align: middle;
}
.item .header .header-left .name {
  margin-left: 20rpx;
  font-size: 32rpx;
  color: #999999;
}
.item .header .header-right {
  text-align: center;
}
.item .header .header-right .attention {
  width: 100rpx;
  height: 52rpx;
  background-color: #f4f4f4;
  border-radius: 8rpx;
  font-size: 24rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.item .header .header-right .delete {
  display: inline-block;
}
.item .title {
  margin-top: 38rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.item .content {
  margin-top: 20rpx;
  position: relative;
  color: #fff;
}
.item .content .img {
  width: 700rpx;
  height: 400rpx;
  border-radius: 12rpx;
}
.item .content .pause {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  font-size: 100rpx;
}
.item .content .playnum {
  min-width: 100rpx;
  background-color: rgba(0, 0, 0, 0.7);
  font-size: 32rpx;
  border-radius: 12rpx;
  position: absolute;
  bottom: 20rpx;
  right: 30rpx;
  text-align: center;
  font-size: 30rpx;
  padding: 0 10rpx;
}
.item .bottom {
  margin: 10rpx 20rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.item .bottom .count {
  font-size: 24rpx;
  color: #d3d3d3;
  margin-left: 10rpx;
  vertical-align: middle;
}
.item .bottom .iconImg {
  width: 36rpx;
  height: 36rpx;
}
.item .bottom .left {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.item .bottom .left .trample {
  margin-left: 30rpx;
}
.item .bottom .right {
  color: #cdcdcd;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.item .bottom .right .comment {
  margin-right: 16rpx;
}
.item .bottom .right .count {
  display: inline-block;
}
.disNone {
  display: none;
}

